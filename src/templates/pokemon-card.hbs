<div class="card">
  <div class="card-img-top">
    <img class="card-img" src="{{sprites.front_default}}" alt="{{name}}">
  </div>
  <div class="card-body">
    <h2 class="card-title">Name: {{name}}</h2>
    <p class="card-text">Weight: {{weight}}</p>
    <p class="card-text">Height: {{height}}</p>

    <p class="card-text"><b>Skills</b></p>
    <ul class="list-group">
    {{#each abilities}}
      <li class="list-group-item">{{ability.name}}</li>
    {{/each}}
    </ul>
  </div>
</div>